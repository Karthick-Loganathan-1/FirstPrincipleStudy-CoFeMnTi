! NSCF calculation for DOS of CoFeMnTi

&CONTROL
    calculation   = 'nscf'              
    restart_mode  = 'restart'          
    prefix        = 'CoFeMnTi_scf'      
    pseudo_dir    = '/home/washingmachine/Galaxy/CoFeMnTi-1/Pseudo'                    
    outdir        = '/home/washingmachine/Galaxy/CoFeMnTi-1/tmp'     
/

&SYSTEM
    ibrav         = 2                       
    celldm(1)     = 10.958                  
    nat           = 4                     
    ntyp          = 4                    
    ecutwfc       = 60.0                
    ecutrho       = 480.0                   

   
    occupations   = 'tetrahedra_opt'

    
    nspin         = 2
    starting_magnetization(1) = 1.5        
    starting_magnetization(2) = 2.5        
    starting_magnetization(3) = 3.0        
    starting_magnetization(4) = 0.1      
/

&ELECTRONS
    diagonalization = 'david'
    mixing_mode   = 'plain'
    mixing_beta   = 0.7                    
    conv_thr      = 1.0d-8                
    diago_full_acc = .true.
/

ATOMIC_SPECIES
  Co  58.933  Co.UPF
  Fe  55.845  Fe.UPF
  Mn  54.938  Mn.UPF
  Ti  47.867  Ti.UPF

ATOMIC_POSITIONS (crystal)
  Fe      0.00    0.00    0.00
  Co      0.50    0.50    0.50
  Mn      0.25    0.25    0.25
  Ti      0.75    0.75    0.75

K_POINTS {automatic}
  20 20 20 0 0 0
